  <h3><%= "#{@type.brand.name.capitalize} - #{@type.name.capitalize}" %></h3>
  <% unless @car.nil? %>
    <div class="list-group">
      <% @cars.each do |car| %>
        <%= link_to "#{car.type.name} - #{car.assembly_year.to_s} Rp #{car.price.to_s}", car_path(car), class: "list-group-item list-group-item-info" %>
      <% end %>
    </div>
  <% end %>
