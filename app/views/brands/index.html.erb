<div class="col-md-9">
<h1>Car Brands</h1>
<% if user_signed_in? %>
  <%= link_to "Add Car Brand", new_brand_path %>
  <%= link_to "Add Car Type", new_type_path %>
<% end %>
<ul>
  <% @brands.each do |brand| %>
      <li>
        <%= link_to brand.name.to_s.capitalize,brand_path(brand) %>
        <%= link_to("Edit", edit_brand_path(brand)) + ' ' + link_to("Delete", brand_path(brand), method: :delete) if user_signed_in? == true %>
        <ul>
          <% brand.types.each do |type| %>
            <li>
              <%= link_to type.name.to_s.capitalize, type_path(type) %> <%= link_to("Edit", edit_type_path(type)) + ' ' + link_to("Delete", type_path(type), method: :delete) if user_signed_in? == true %>
            </li>
          <% end %>
        </ul>
      </li>
  <% end %>
</ul>
</div>
